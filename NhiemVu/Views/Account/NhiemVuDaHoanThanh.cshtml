
@{
    ViewBag.Title = "Nhiệm vu đã hoàn thành";
}

@section js{
    <script>
        $(function () {
            $.ajax({
                url: "@Url.Action("GetNhiemVuMoi","Account")",
                type: "post",
            dataType: "json",
            data: { 'index': 0 },
            success: function (result) {
                var html = '';
                for (i = 0; i < result.length; i++) {
                    html = '<div class="input-group w3-margin">';
                    html += '<span class="w3-col input-group-addon w3-pale-red" style="width:10%" id="basic-addon1">';
                    date = new Date(parseInt(result[i]["dNgayKT"].substr(6)));
                    html += date.toLocaleDateString() + '</span>';
                    if (result[i]['iMaTrangThaiCode'] == 1) {
                        html += '<a href="/Account/ChiTietNhiemVu?iMaNhiemVuCode=' + result[i]["iMaNhiemVuCode"] + '" class="w3-col w3-input w3-hover-gray col-md-6 w3-border w3-border-blue" style="width:60%">' + '<span class="w3-text-indigo">' + result[i]['vNguoiDuocGiao'] + '</span> : ' + result[i]['vTenNhiemVu'] + '</a>';
                        html += '<span class="w3-col input-group-addon w3-blue" style="width:20%" id="basic-addon1">' + result[i]['vTenTrangThai'] + '</span>';
                    } else if (result[i]['iMaTrangThaiCode'] == 2) {
                        html += '<a href="/Account/ChiTietNhiemVu?iMaNhiemVuCode=' + result[i]["iMaNhiemVuCode"] + '" class="w3-col w3-input w3-hover-gray col-md-6 w3-border w3-border-khaki" style="width:60%">' + '<span class="w3-text-indigo">' + result[i]['vNguoiDuocGiao'] + '</span> : ' + result[i]['vTenNhiemVu'] + '</a>';
                        html += '<span class="w3-col input-group-addon w3-khaki" style="width:20%" id="basic-addon1">' + result[i]['vTenTrangThai'] + '</span>';
                    } else if (result[i]['iMaTrangThaiCode'] == 3) {
                        html += '<a href="/Account/ChiTietNhiemVu?iMaNhiemVuCode=' + result[i]["iMaNhiemVuCode"] + '" class="w3-col w3-input w3-hover-gray col-md-6 w3-border w3-border-indigo" style="width:60%">' + '<span class="w3-text-indigo">' + result[i]['vNguoiDuocGiao'] + '</span> : ' + result[i]['vTenNhiemVu'] + '</a>';
                        html += '<span class="w3-col input-group-addon w3-green" style="width:20%" id="basic-addon1">' + result[i]['vTenTrangThai'] + '</span>';
                    } else if (result[i]['iMaTrangThaiCode'] == 4) {
                        html += '<a href="/Account/ChiTietNhiemVu?iMaNhiemVuCode='+result[i]["iMaNhiemVuCode"] + '" class="w3-col w3-input w3-hover-gray col-md-6 w3-border w3-border-green" style="width:60%">' + '<span class="w3-text-indigo">' + result[i]['vNguoiDuocGiao'] + '</span> : ' + result[i]['vTenNhiemVu'] + '</a>';
                        html += '<span class="w3-col input-group-addon w3-teal" style="width:20%" id="basic-addon1">' + result[i]['vTenTrangThai'] + '</span>';
                    } else if (result[i]['iMaTrangThaiCode'] == 5) {
                        html += '<a href="/Account/ChiTietNhiemVu?iMaNhiemVuCode=' + result[i]["iMaNhiemVuCode"] + '" class="w3-col w3-input w3-hover-gray col-md-6 w3-border w3-border-red" style="width:60%">' + '<span class="w3-text-indigo">' + result[i]['vNguoiDuocGiao'] + '</span> : ' + result[i]['vTenNhiemVu'] + '</a>';
                        html += '<span class="w3-col input-group-addon w3-red" style="width:20%" id="basic-addon1">' + result[i]['vTenTrangThai'] + '</span>';
                    }
                    html += '</div>';
                    $(".bang-nhiem-vu").append(html);
                }
                html = '<div class="w3-row" id="btntaithem">';
                html += '<button onclick="taiThemNhiemVu()" class="w3-btn w3-block w3-teal w3-padding-large">';
                html += '    Tải thêm ...';
                html += '</button>';
                html += '</div>';
                $(".bang-nhiem-vu").after(html);
            }
        });
        });

        function chiTietNhiemVu(iMaNhiemVuCode) {
            $.get("@Url.Action("ChiTietNhiemVu","Account")", { iMaNhiemVuCode: iMaNhiemVuCode });
        }

        $("#search").keyup(function () {
            $(".bang-nhiem-vu").empty();
            $("#index").val(0);
            locbangnhiemvu();
        });

        function locbangnhiemvu() {
            $.ajax({
                url: "@Url.Action("GetNhiemVuMoi", "Account")",
                type: 'post',
                dataType: 'json',
                data: {
                    'index': $("#index").val(),
                    'search': $("#search").val(),
                    'iMaNguoiDuocGiaoCode': $("#selthanhvien").val(),
                    'iMaTrangThaiCode': $("#seltrangthai").val()
                },
                success: function (result) {
                    taoDanhSachNhiemVu(result)
                }
            });
        }

        function taoDanhSachNhiemVu(result) {
            var html = '';
            for (i = 0; i < result.length; i++) {
                html = '<div class="input-group w3-margin">';
                html += '<span class="w3-col input-group-addon w3-pale-red" style="width:10%" id="basic-addon1">';
                date = new Date(parseInt(result[i]["dNgayKT"].substr(6)));
                html += date.toLocaleDateString() + '</span>';
                if (result[i]['iMaTrangThaiCode'] == 1) {
                    html += '<a href="/Account/ChiTietNhiemVu?iMaNhiemVuCode=' + result[i]["iMaNhiemVuCode"] + '" class="w3-col w3-input w3-hover-gray col-md-6 w3-border w3-border-blue" style="width:60%">' + result[i]['vNguoiDuocGiao'] + ' : ' + result[i]['vTenNhiemVu'] + '</a>';
                    html += '<span class="w3-col input-group-addon w3-blue" style="width:20%" id="basic-addon1">' + result[i]['vTenTrangThai'] + '</span>';
                } else if (result[i]['iMaTrangThaiCode'] == 2) {
                    html += '<a href="/Account/ChiTietNhiemVu?iMaNhiemVuCode=' + result[i]["iMaNhiemVuCode"] + '" class="w3-col w3-input w3-hover-gray col-md-6 w3-border w3-border-khaki" style="width:60%">' + result[i]['vNguoiDuocGiao'] + ' : ' + result[i]['vTenNhiemVu'] + '</a>';
                    html += '<span class="w3-col input-group-addon w3-khaki" style="width:20%" id="basic-addon1">' + result[i]['vTenTrangThai'] + '</span>';
                } else if (result[i]['iMaTrangThaiCode'] == 3) {
                    html += '<a href="/Account/ChiTietNhiemVu?iMaNhiemVuCode=' + result[i]["iMaNhiemVuCode"] + '" class="w3-col w3-input w3-hover-gray col-md-6 w3-border w3-border-indigo" style="width:60%">' + result[i]['vNguoiDuocGiao'] + ' : ' + result[i]['vTenNhiemVu'] + '</a>';
                    html += '<span class="w3-col input-group-addon w3-green" style="width:20%" id="basic-addon1">' + result[i]['vTenTrangThai'] + '</span>';
                } else if (result[i]['iMaTrangThaiCode'] == 4) {
                    html += '<a href="/Account/ChiTietNhiemVu?iMaNhiemVuCode=' + result[i]["iMaNhiemVuCode"] + '" class="w3-col w3-input w3-hover-gray col-md-6 w3-border w3-border-green" style="width:60%">' + result[i]['vNguoiDuocGiao'] + ' : ' + result[i]['vTenNhiemVu'] + '</a>';
                    html += '<span class="w3-col input-group-addon w3-teal" style="width:20%" id="basic-addon1">' + result[i]['vTenTrangThai'] + '</span>';
                } else if (result[i]['iMaTrangThaiCode'] == 5) {
                    html += '<a href="/Account/ChiTietNhiemVu?iMaNhiemVuCode=' + result[i]["iMaNhiemVuCode"] + '" class="w3-col w3-input w3-hover-gray col-md-6 w3-border w3-border-red" style="width:60%">' + result[i]['vNguoiDuocGiao'] + ' : ' + result[i]['vTenNhiemVu'] + '</a>';
                    html += '<span class="w3-col input-group-addon w3-red" style="width:20%" id="basic-addon1">' + result[i]['vTenTrangThai'] + '</span>';
                }
                html += '</div>';
                $(".bang-nhiem-vu").append(html);
            }
        }
    </script>
}

<div class="w3-white w3-margin-top w3-container w3-border w3-border-green" style="padding:0px">

    <div class="w3-bar w3-teal">
        <div class="w3-bar-item">@ViewBag.Title</div>
    </div>
    <div class="w3-container">
        <div class="w3-bar">
            <div class="w3-bar-item col-md-4">
                <div class="input-group">
                    <input type="text" id="search" class="form-control" placeholder="Search for..." aria-label="Search for...">
                    <span class="input-group-btn">
                        <button class="btn w3-teal" id="btnsearch" type="button"><i class="fa fa-search" aria-hidden="true"></i></button>
                    </span>
                </div>
            </div>
        </div>
        <input hidden id="index" value="0" />
        <div class="bang-nhiem-vu">
        </div>
    </div>
</div>
