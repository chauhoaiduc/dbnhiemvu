@using NhiemVu.Helper
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Helper/bootstrap-4.0.0-alpha.6-dist/css/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.2.1.min.js"></script>
    <script src="~/Helper/tether-1.3.3/dist/js/tether.min.js"></script>
    <script src="~/Helper/bootstrap-4.0.0-alpha.6-dist/js/bootstrap.min.js"></script>
    <link href="~/Content/w3csss.css" rel="stylesheet" />
    <link href="~/Helper/font-awesome-4.7.0/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Content/Site.css" rel="stylesheet" />
    @RenderSection("css", required: false)
</head>
<body style="background:url('/Content/Images/background/main_bg.jpg')">
    <div class="w3-bar w3-teal">
        <a href="@Url.Action("Index","Home")" class="w3-bar-item w3-button">Home</a>

        @Html.Partial("_LoginPartial")
    </div>
    @if (CurrentContext.IsLogged())
    {
        @Html.Partial("_SidebarPartial")
    }
    

    <div id="main" style="margin-left: 180px;">
        <div class="w3-display-container">
            <span title="open Sidebar" style="display:none;" id="openNav" class="w3-button w3-transparent w3-display-topleft w3-xlarge" onclick="w3_open()">☰</span>
            <div id="content" class="w3-container" style="margin-left:50px;">
                @RenderBody()
            </div>    
            
        </div>
    </div>

    <!-- Add myscript -->
    <script src="~/Scripts/MyScripts/myslidebar.js"></script>
    @RenderSection("js", required: false)
</body>
</html>
